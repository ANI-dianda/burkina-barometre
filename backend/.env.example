# Local development example env
# Copy to .env and edit values for your environment

# Database connection (Postgres)
DATABASE_URL=postgresql://user:password@postgres-db:5432/barometre?schema=public

# JWT secret — MUST be set in production
JWT_SECRET=change_me

# Example: port override
PORT=3000
# Configuration de base
NODE_ENV=development
PORT=3000

# Base de données
DATABASE_URL=postgresql://user:password@localhost:5432/barometre?schema=public

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# SMS (à configurer avec un vrai service)
SMS_API_KEY=your-sms-api-key
SMS_SENDER=BurkinaBarometre

# Redis (pour le cache OTP en production)
REDIS_URL=redis://localhost:6379

# Logs
LOG_LEVEL=debug

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200

# Géolocalisation
DEFAULT_SEARCH_RADIUS=5000
MAX_SEARCH_RADIUS=50000
